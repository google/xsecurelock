: ${XSECURELOCK_LIST_VIDEOS_COMMAND:=find ~/Videos -type f}
: ${XSECURELOCK_VIDEOS_FLAGS:=}

sh -c "$XSECURELOCK_LIST_VIDEOS_COMMAND" | shuf | head -n 256 |\
@path_to_mplayer@ \
  -noconsolecontrols \
  -really-quiet \
  -nostop-xscreensaver \
  -heartbeat-cmd "" \
  -wid "${XSCREENSAVER_WINDOW}" \
  -fixed-vo \
  -nosound \
  -shuffle \
  ${XSECURELOCK_VIDEOS_FLAGS} \
  -playlist -
