#!/usr/bin/make -f
# -*- makefile -*-

export DH_VERBOSE=1

%:
	dh $@ --with autoreconf

override_dh_auto_configure:
	dh_auto_configure -- \
		--with-pam --with-pam-service-name=common-auth \
		--with-xcomposite \
		--with-xfixes \
		--with-xkb \
		--with-xft \
		--with-xrandr \
		--with-xscreensaver=/usr/lib/xscreensaver \
		--with-xss

override_dh_autoreconf:
	dh_autoreconf ./autogen.sh

override_dh_auto_install:
	dh_auto_install
	find ./debian -type f -name "LICENSE" -delete
